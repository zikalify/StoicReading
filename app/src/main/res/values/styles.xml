<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_alt</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_alt</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_alt</item>
    </style>

    dark theme
    <style name="AppThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="android:windowBackground">@color/windowBackground_night</item>
        <item name="colorButtonNormal">@color/buttonColor_night</item>
        <item name="android:scrollbarThumbVertical">@color/textColorPrimaryScroll</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="AppThemeSepia" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/textColorPrimarySepia</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimarySepia</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSepia</item>
        <item name="android:windowBackground">@color/windowBackgroundSepia</item>
        <item name="colorButtonNormal">@color/buttonColorSepia</item>
        <item name="android:scrollbarThumbVertical">@color/textColorPrimaryScrollSepia</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

</resources>
